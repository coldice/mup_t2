<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tvrooms"
  android:layout_width="fill_parent"
  android:orientation="vertical" android:layout_height="fill_parent">
    <RelativeLayout android:layout_width="fill_parent" android:id="@+id/rl_roomsublayout" android:layout_height="60dip" android:layout_gravity="center_vertical|fill|bottom">
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txt_roomhead" android:textSize="26px" android:layout_marginBottom="10px" android:text="room overview" android:layout_marginLeft="4px"></TextView>
        <Button android:text="Refresh Rooms" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:id="@+id/btn_rmrefresh" android:layout_height="wrap_content" android:layout_marginRight="6px"></Button>
    </RelativeLayout>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/createForm" android:layout_height="wrap_content">
        <EditText android:layout_height="wrap_content" android:text="New Room" android:id="@+id/inp_roomname" android:layout_width="210dip" android:layout_marginLeft="6px"></EditText>
        <Button android:layout_height="wrap_content" android:text="Create" android:layout_width="wrap_content" android:id="@+id/btn_createRoom"></Button>
    </LinearLayout>
        
    <ScrollView android:id="@+id/ScrollView1" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="50dip" android:id="@+id/linearLayout1">
        <ListView android:layout_width="fill_parent" android:id="@+id/lsv_roomlist" android:layout_height="250dip"></ListView>
                
        </LinearLayout>
    </ScrollView>
</LinearLayout>
